{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile", 
        "command": "g++", 
        "args": [
          "./*.cpp",
          "-o",
          "${fileDirname}/main.exe",
          "-g", 
          "-Wall",
          "-Wno-unused-variable",
          "-Wno-reorder",
          "-Wno-sign-compare",
          "-static-libgcc",
          "-std=c++17" 
        ], 
        "type": "shell", 
        "group": {
          "kind": "build",
          "isDefault": true 
        },
        "presentation": {
          "echo": true,
          "reveal": "always", 
          "focus": false, 
          "panel": "shared" 
        }
        // "problemMatcher":"$gcc" 
      }
    ]
  }